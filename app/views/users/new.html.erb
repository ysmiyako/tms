<script>
$(function() {
  $(document).on("keypress", "input:not(.allow_submit)", function(event) {
    return event.which !== 13;
  });
});
</script>


  <div class="schimg">
  <%= render 'logo' %>
  </div>
  <div class="container">
<div class="atitle">
<h1>New Driver</h1>
</div>

<%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2> 登録時にエラーが発生しました。</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="afield">
  <div class="namefield">
    <%= f.text_field :name %>
  </div>
  <div class="timefield">
    
    <%= f.text_field :time %>
  
  </div>
  
   <div class="field">
    <%= f.label :allow, "ドライビング動画を特設ページにて公開します。公開を希望されない方はチェックを外してください。" %>
    <%= f.check_box :allow, checked:true, label:" " %>
  </div>
  
  <div class="field">
    <%= f.label :bestlap, "Best Lap" %>
    <%= f.text_field :bestlap, hide_label: true, style: "width: 100px" %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>


</div>